<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beige">

    <RelativeLayout
        android:id="@+id/topBarPacientes"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/btnPacientesVoltar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/outline_arrow_back_24"
            android:contentDescription="Voltar"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btnPacientesVoltar"
            android:layout_toStartOf="@id/logoPacientes"
            android:gravity="center_horizontal"
            android:text="Pacientes"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/logoPacientes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/container_backgroundone"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

            <TextView
                android:id="@+id/tvTituloPacientes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Pacientes:"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_start_margin"
                app:layout_constraintEnd_toEndOf="@id/guideline_end_margin" />

            <LinearLayout
                android:id="@+id/btnMenuVerPaciente"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/botao_quadrado"
                app:backgroundTint="@null"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/tvTituloPacientes"
                app:layout_constraintStart_toStartOf="@id/guideline_start_margin"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_groups" />

                <TextView
                    android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ver Pacientes"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnMenuAdicionarPaciente"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/botao_quadrado"
                app:backgroundTint="@null"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="@id/btnMenuVerPaciente"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_center"
                app:layout_constraintEnd_toEndOf="@id/guideline_end_margin">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_personadd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Adicionar Paciente"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTituloConsultas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Consultas:"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/btnMenuVerPaciente"
                app:layout_constraintStart_toStartOf="@id/guideline_start_margin"
                app:layout_constraintEnd_toEndOf="@id/guideline_end_margin" />

            <LinearLayout
                android:id="@+id/btnNovaConsulta"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/botao_quadrado"
                app:backgroundTint="@null"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/tvTituloConsultas"
                app:layout_constraintStart_toStartOf="@id/guideline_start_margin"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_patientlist" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Nova Consulta"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnMenuVerConsultas"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/botao_quadrado"
                app:backgroundTint="@null"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="@id/btnNovaConsulta"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_center"
                app:layout_constraintEnd_toEndOf="@id/guideline_end_margin">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_folderopen" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ver Consultas"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>
