<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">
<!--    tools:context=".fragments.pacientes.AddPacienteFragment"> -->

    <!-- DENTRO DE res/layout/fragment_adicionar_pacientes.xml -->

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarAddPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/beige"
        app:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- SUBSTITUA SUA TOOLBAR ANTIGA POR ESTA -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarAddPaciente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/beige_dark"
            app:contentInsetStart="0dp"
            android:elevation="0dp" >

            <!-- Usamos um ConstraintLayout para ter controle total da posição -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- 1. SETA DE VOLTAR: Ancorada no início (esquerda) do pai -->
                <ImageView
                    android:id="@+id/btnAddPacienteVoltar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/outline_arrow_back_24"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Voltar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp"/>

                <!-- 2. TÍTULO: Ancorado no centro horizontal do pai -->
                <TextView
                    android:id="@+id/tvToolbarTitleAddPaciente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text=""
                    tools:text="Título da Tela"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- O resto do seu arquivo (ScrollView, Button, etc.) permanece igual -->



    <ScrollView
android:id="@+id/scrollViewAddPaciente"
android:layout_width="0dp"
android:layout_height="0dp"
android:clipToPadding="false"
android:padding="16dp"
android:scrollbars="none"
app:layout_constraintTop_toBottomOf="@id/appBarAddPaciente"
app:layout_constraintBottom_toTopOf="@id/btnSalvarPaciente"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Nome Completo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Nome Completo"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etNomePaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
    android:hint="Ex: Carlos Alberto de Nóbrega"
    android:inputType="textPersonName|textCapWords"
    android:padding="12dp"/>

    <!-- Data de Nascimento -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Data de Nascimento"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etDataNascPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="DD/MM/AAAA"
        android:inputType="date"
        android:focusable="false"
    android:clickable="true"
    android:padding="12dp"/>

    <!-- Email -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etEmailPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Ex: carlos.nobrega@email.com"
        android:inputType="textEmailAddress"
        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Telefone"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etTelefonePaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Ex: (11) 99999-9999"
        android:inputType="phone"
        android:padding="12dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Gênero"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinnerGeneroPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginTop="4dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Observações (Opcional)"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etObservacoesPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Alergias, preferências, objetivos..."
        android:inputType="textMultiLine|textCapSentences"
        android:minLines="3"
        android:gravity="top"
        android:padding="12dp"/>

</LinearLayout>
</ScrollView>

<Button
android:id="@+id/btnSalvarPaciente"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_margin="16dp"
android:text="Salvar Paciente"
android:textAllCaps="false"
android:background="@drawable/button_background"
    android:padding="12dp"
    android:textSize="18sp"
    app:backgroundTint="@null"
    android:textColor="@android:color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

