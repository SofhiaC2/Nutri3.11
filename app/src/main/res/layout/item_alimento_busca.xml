<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvNomeAlimentoBusca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        tools:text="Arroz branco, cozido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


    app:layout_constraintEnd_toStartOf="@+id/btnAdicionarAlimen" />

    <TextView
        android:id="@+id/tvDetalhesAlimentoBusca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textAppearance="?attr/textAppearanceCaption"
        tools:text="130 Kcal (100g)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNomeAlimentoBusca"


    app:layout_constraintEnd_toStartOf="@+id/btnAdicionarAlimen" />

    <!-- O ID deste botão está correto, mas as referências a ele estavam erradas -->
    <ImageButton
        android:id="@+id/btnAdicionarAlimen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/icon_add"
        android:contentDescription="Adicionar alimento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
