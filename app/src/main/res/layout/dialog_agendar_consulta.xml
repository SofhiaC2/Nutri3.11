<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agendamento"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNomePacienteConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Nome do Paciente"
            android:inputType="textPersonName|textCapWords" />

        <EditText
            android:id="@+id/etTelefonePacienteConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Telefone (Opcional)"
            android:inputType="phone" />

        <!-- CAMPOS DE DATA E HORA MODIFICADOS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etDataConsulta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:hint="Data (DD/MM/AAAA)"
                android:inputType="number"
                android:maxLength="10" />

            <EditText
                android:id="@+id/etHoraConsulta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:hint="Hora (HH:MM)"
                android:inputType="number"
                android:maxLength="5" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
