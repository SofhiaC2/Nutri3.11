<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".fragments.menu.HomeFragment"> <!-- Ajuste o pacote se necessário -->

    <!-- Seção Superior: Logo e Saudação -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Olá,"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivLogo"
        app:layout_constraintTop_toTopOf="@+id/ivLogo" />

    <!-- Container Principal (com o fundo arredondado) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_principal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/container_backgroundone"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo">

        <!-- Título "Acesso Rápido" -->
        <TextView
            android:id="@+id/tvTituloAcessoRapido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acesso Rápido"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Card de Destaque para a Próxima Consulta -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProximaConsulta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloAcessoRapido">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/verde_menta"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Próxima consulta:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- TextView que mostrará a informação da consulta -->
                <TextView
                    android:id="@+id/tvProximaConsultaInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/icon_calendar"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    tools:text="Maria Joaquina - 14/11/2025 às 10:00" />

                <!-- TextView que aparece quando não há consultas -->
                <TextView
                    android:id="@+id/tvSemConsultas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Nenhuma consulta futura agendada."
                    android:textSize="16sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <!-- ProgressBar para indicar carregamento -->
                <ProgressBar
                    android:id="@+id/progressBarConsultas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:visibility="visible" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botão para Agendar Nova Consulta -->
        <Button
            android:id="@+id/btnAgendarConsulta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:text="Agendar Nova Consulta"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:backgroundTint="@color/verde_claro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardProximaConsulta" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
