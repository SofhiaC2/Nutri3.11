<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_login"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.nutri3.fragments.ui.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.nutri3.fragments.ui.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">

        <!-- AÇÃO CORRIGIDA: Agora aponta para a ação global que você criou no nav_main.xml -->
        <action
            android:id="@+id/action_loginFragment_to_register"
            app:destination="@id/action_global_to_registerFragment" />

        <action
            android:id="@+id/action_loginFragment_to_recover_accountFragment"
            app:destination="@id/recover_accountFragment" />
    </fragment>

    <!-- O registerFragment FOI REMOVIDO DESTE ARQUIVO -->

    <fragment
        android:id="@+id/recover_accountFragment"
        android:name="com.example.nutri3.fragments.ui.Recover_accountFragment"
        android:label="Recover_accountFragment" />

</navigation>
