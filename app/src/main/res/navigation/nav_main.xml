<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/menu_home">

    <fragment
        android:id="@+id/menu_home"
        android:name="com.example.nutri3.fragments.menu.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/menu_consults"
        android:name="com.example.nutri3.fragments.menu.ConsultsFragment"
        android:label="fragment_consults"
        tools:layout="@layout/fragment_pacienteshost" />

    <!-- AQUI ESTÁ A MUDANÇA PRINCIPAL -->
    <!-- O item de menu 'menu_calendar' agora inclui (inclues) o grafo 'nav_pacientes' -->
    <include app:graph="@navigation/nav_pacientes" />

    <fragment
        android:id="@+id/menu_config"
        android:name="com.example.nutri3.fragments.menu.ConfigFragment"
        android:label="fragment_config"
        tools:layout="@layout/fragment_config" />


        <action
            android:id="@+id/action_global_to_registerFragment"
            app:destination="@id/registerFragment" >


        <argument
            android:name="isEditMode"
            app:argType="boolean"
            android:defaultValue="false" />
        </action>



</navigation>
